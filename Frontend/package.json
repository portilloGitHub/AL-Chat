{
  "name": "al-chat-frontend",
  "version": "1.0.2",
  "description": "AL-Chat Frontend - React application",
  "main": "electron/main.js",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "axios": "^1.6.0",
    "mammoth": "^1.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^27.0.0",
    "electron-is-dev": "^2.0.0",
    "http-proxy-middleware": "^2.0.9",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "cross-env HOST=localhost PORT=3000 react-scripts start",
    "start:no-browser": "cross-env BROWSER=none HOST=localhost PORT=3000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "cross-env ELECTRON_USE_LOCALHOST=false electron .",
    "electron-dev": "concurrently \"cross-env HOST=localhost PORT=3000 npm start\" \"wait-on http://localhost:3000 -t 60000 && cross-env ELECTRON_USE_LOCALHOST=true electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
